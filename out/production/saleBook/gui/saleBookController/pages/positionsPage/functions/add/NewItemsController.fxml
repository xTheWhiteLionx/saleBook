<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.saleBookController.pages.positionsPage.functions.add.NewItemsController">
   <center>
   </center>
   <bottom>
   </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <bottom>
      <ButtonBar BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="previousBtn" mnemonicParsing="false" text="Previous"
                    onAction="#handlePrevious"/>
               <Button fx:id="applyBtn" defaultButton="true" mnemonicParsing="false" onAction="#handleApply" text="apply" />
         </buttons>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
   <top>
      <ButtonBar BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="addItemBtn" mnemonicParsing="false" onAction="#handleAddItem" text="add item" />
         </buttons>
      </ButtonBar>
   </top>
</BorderPane>
